#!/bin/bash

# API endpoint for Pikachu
API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"

# Output files
DATA_FILE="data.json"
ERROR_FILE="errors.txt"

# Make API request and handle success/failure
if curl -s -f "$API_URL" -o "$DATA_FILE"; then
    echo "Data successfully saved to $DATA_FILE"
else
    echo "Failed to retrieve data from $API_URL" >> "$ERROR_FILE"
    echo "Error logged to $ERROR_FILE"
fi
