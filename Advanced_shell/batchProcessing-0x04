#!/bin/bash

# Array of PokÃ©mon to fetch
pokemons=("pikachu" "bulbasaur" "charmander" "squirtle")

# Start fetching in the background
for p in "${pokemons[@]}"; do
    curl -s "https://pokeapi.co/api/v2/pokemon/$p" > "$p.json" &
done

# Show background jobs
jobs

# Wait for all jobs to complete
wait

# Optional: kill any remaining background processes (if necessary)
kill $(jobs -p) 2>/dev/null
