#!/bin/bash

# Extract and format the Pok√©mon name (capitalize first letter)
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')

# Extract height in decimeters, convert to meters
formatted_height=$(jq -r '.height' data.json | awk '{print $1 / 10}')

# Extract weight in hectograms, convert to kilograms
formatted_weight=$(jq -r '.weight' data.json | awk '{print $1 / 10}')

# Extract first type and capitalize
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')

# Output in expected format
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
